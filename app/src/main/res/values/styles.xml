<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="button_app">
        <item name="android:textColor">@color/text_button_app</item>
        <item name="android:background">@color/bg_button_app</item>

        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>
    <style name="button_my_app" parent="button_app">

        <item name="android:background">@color/bg_button_my_app</item>


    </style>
    <style name="button_apps" parent="button_app">

        <item name="android:background">@color/bg_button_app</item>


    </style>
</resources>
